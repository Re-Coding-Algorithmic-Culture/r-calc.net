<h1 class="hidden">Project publications</h1>

<div id="bucket">
	{%- for entry in collections.blob %}
		<div class="couch" onmousedown="startDrag(event);">
			<a title="Drag meâœ¨" class="couch-link" href="{{ entry.url | url }}">
				<div class="couch-icon {{ entry.data.icon }}" aria-label="{{ entry.data.iconlabel }}"></div>
				<div class="couch-text"><span>{{ entry.data.title }}</span></div>
			</a>
		</div>
	{%- endfor %}
</div>
<div class="drop" title="Scroll for more info" onmousedown="window.scrollTo({ top: window.innerHeight, behavior: 'smooth' })"></div>

<div id="index-background">
	<video id="index-video" autoplay muted loop>
  		<source src="assets/videos/glitch.mp4" type="video/mp4">
	</video> 
</div>

<main id="about">

	<div id="sound">
    <audio controls>
    <source src="../assets/sounds/about.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
    </audio>
</div>
	
	{{ content | safe }}
	
</main>